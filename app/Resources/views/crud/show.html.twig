{% extends 'base.html.twig' %}

{% block body %}
    <h1>Crud</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ crud.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ crud.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ crud.description }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ crud.file }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li  class="list-group-item">
            <a href="{{ path('crud_index') }}">Back to the list</a>
        </li>
        <li  class="list-group-item">
            <a href="{{ path('crud_edit', { 'id': crud.id }) }}">Edit</a>
        </li>
        <li  class="list-group-item">
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
